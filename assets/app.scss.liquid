/* Popups ====================================================================*/

@mixin overlay() {
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

/// Basic popup styling
.popup {
  position: fixed;
  z-index: 9996;
  opacity: 0;
  visibility: hidden;
  @include overlay();
  @include transition();
  background: rgba($colorBody, 0.85);
  .popup-outside {
    position: absolute;
    z-index: 9998;
    @include overlay();
  }
  .popup-inner {
    z-index: 9997;
    text-align: center;
    white-space: nowrap;
    @include overlay();
    @include prefixer(transform, translateY(-50px), webkit moz ms spec);
    @include transition();
    -webkit-backface-visibility: hidden;
    cursor: pointer;
  }
  &.visible {
    opacity: 1;
    visibility: visible;
    @include transition();
    .popup-inner {
      @include prefixer(transform, translateY(0px), webkit moz ms spec);
    }
  }
  .popup-content {
    @include vertical-align();
    display: inline-block;
    z-index: 9999;
    max-width: 100%;
    max-height: 100%;
    overflow: scroll; // Optional line for overly tall popups
    padding: $gutter;
    background-color: $colorBackground;
    text-align: initial;
    cursor: default;
    white-space: initial;
  }
	.popup-close {
  	display: block;
		position: absolute;
		top: $gutter/2;
		right: $gutter/2;
  }
}

